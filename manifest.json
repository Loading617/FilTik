{
    "manifest_version": 3,
    "name": "FilTik",
    "version": "1.0",
    "description": "Filter TikTok videos and sync presets with Google Drive backup.",
    "permissions": [
      "storage",
      "identity"
    ],
    "host_permissions": [
      "https://www.googleapis.com/*"
    ],
    "oauth2": {
      "client_id": "YOUR_CLIENT_ID",
      "scopes": ["https://www.googleapis.com/auth/drive.file"]
    },
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }
  
