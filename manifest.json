{
  "manifest_version": 3,
  "name": "FilTik",
  "version": "1.0",
  "description": "Sort and shuffle videos on TikTok profile, favorites, and liked pages.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://www.tiktok.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.tiktok.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/FilTik16.png",
      "48": "icons/FilTik48.png",
      "128": "icons/FilTik128.png"
    }
  }
}
